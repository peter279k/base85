{
    "name": "tuupola/base85",
    "description": "Base85 encoder and decoder for arbitrary data",
    "keywords": [
        "base62"
    ],
    "homepage": "https://github.com/tuupola/base85",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Tuupola",
            "email": "tuupola@appelsiini.net",
            "homepage": "http://www.appelsiini.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^5.5 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Tuupola\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tuupola\\": "tests"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5",
        "phpunit/phpunit": "^4.8",
        "paragonie/random_compat": "^2.0",
        "phpbench/phpbench": "^0.13.0"
    },
    "scripts": {
        "test": "composer phplint && composer phpcs && composer phpunit",
        "phpcs": "vendor/bin/phpcs --standard=PSR2 --extensions=php --encoding=utf-8 --ignore=*/tests/*,*/vendor/*,*/benchmarks/* . -p",
        "phplint": "env phplint  '**/*.php' '!vendor/**'",
        "phpunit": "vendor/bin/phpunit --coverage-text --coverage-html ./tests/_output/coverage/",
        "phpbench": "vendor/bin/phpbench run benchmarks/ --report=default",
        "watch": "find . -name \"*.php\" -not -path \"./vendor/*\" -o -name \"*.json\" -not -path \"./vendor/*\"| entr -c composer test"
    }
}
